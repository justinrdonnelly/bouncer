<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="ZoneDefenseWindow" parent="AdwApplicationWindow">
    <property name="title">Zone Defense</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="primary">True</property>
                <property name="icon-name">open-menu-symbolic</property>
                <property name="tooltip-text" translatable="yes">Menu</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">horizontal</property>

            <!-- icon -->
            <child>
              <object class="GtkImage">
                <property name="valign">GTK_ALIGN_START</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="icon-name">network-wireless-symbolic</property>
                <property name="pixel-size">64</property>
              </object>
            </child> <!-- end icon -->

            <!-- right side of window -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>

                <!-- text label -->
                <child>
                  <object class="GtkLabel">
                    <property name="xalign">0</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <property name="label">You have connected to a new Wi-Fi network. Please choose a firewall zone. What type of network is this?</property>
                    <property name="wrap">True</property>
                  </object>
                </child>

                <!-- Properties (connectionId, defaultZone, currentZone) -->
                <child>
                  <object class="GtkListBox">
                    <property name="selection-mode">none</property>
                    <property name="width-request">300</property>
                    <property name="halign">GTK_ALIGN_START</property> <!-- make the list box not span the entire box -->
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwActionRow" id="connectionId">
                        <property name="title" translatable="yes">Network</property>
                        <property name="subtitle-selectable" translatable="yes">True</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow" id="defaultZone">
                        <property name="title" translatable="yes">Default Zone</property>
                        <property name="subtitle-selectable" translatable="yes">True</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow" id="currentZone">
                        <property name="title" translatable="yes">Current Zone</property>
                        <property name="subtitle-selectable" translatable="yes">True</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- dropdown -->
                <child>
                  <object class="AdwPreferencesGroup"> <!-- It seems I need AdwPreferencesGroup in order to use AdwComboRow -->
                    <property name="margin-top">24</property>
                    <property name="margin-bottom">24</property>
                    <property name="halign">GTK_ALIGN_START</property> <!-- make the dropdown not span the entire box -->
                    <property name="title" translatable="yes">Firewall Zone</property>
                    <property name="description" translatable="yes">Choose the firewall zone for this network.</property>
                    <child>
                      <object class="AdwComboRow" id="zoneDropDown">
                        <property name="title" translatable="yes">Zone</property>
                        <property name="width_request">300</property>
                        <property name="model">
                          <object class="GtkStringList" id="zoneList"/>
                        </property>
                      </object> <!-- end AdwComboRow -->
                    </child>
                  </object> <!-- end group -->
                </child>

                <!-- Exit button/label -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="margin-top">4</property>
                    <property name="margin-bottom">4</property>
                    <child>
                      <object class="GtkButton">
                        <property name="width-request">100</property>
                        <property name="label">Exit</property>
                        <property name="halign">center</property>
                        <signal name="clicked" handler="exitButtonClicked"/>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="xalign">0</property>
                        <property name="wrap">True</property>
                        <property name="width-chars">30</property> <!-- min width -->
                        <property name="label">No change will be made. You will see this window again the next time you connect to this network.</property>
                      </object> <!-- end GtkLabel -->
                    </child>
                  </object>
                </child>

                <!-- Choose button/label -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="margin-top">4</property>
                    <property name="margin-bottom">12</property> <!-- add some extra margin since this is on the bottom of the window -->
                    <child>
                      <object class="GtkButton">
                        <property name="width-request">100</property>
                        <property name="label">Choose</property>
                        <property name="halign">center</property>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                        <signal name="clicked" handler="chooseButtonClicked"/>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="xalign">0</property>
                        <property name="wrap">True</property>
                        <property name="width-chars">30</property> <!-- min width -->
                        <property name="label">The selected firewall zone will be used every time you connect to this network.</property>
                      </object> <!-- end GtkLabel -->
                    </child>
                  </object>
                </child>

              </object> <!-- end vertical GtkBox -->
            </child>
          </object> <!-- end horizontal GtkBox -->
        </property>
      </object>
    </property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_About Zone-defense</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
