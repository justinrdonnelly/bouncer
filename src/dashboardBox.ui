<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="DashboardBox" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <child>
      <object class="GtkLabel">
        <property name="xalign">0</property>
        <property name="margin-bottom">12</property>
        <property name="wrap">true</property>
        <property name="label" translatable="yes">In order to function properly, Bouncer depends on multiple other system components and configurations. To help facilitate the correct setup, this page shows the status for those required components and configurations.</property>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="xalign">0</property>
        <property name="margin-bottom">12</property>
        <property name="wrap">true</property>
        <property name="label" translatable="yes">You can close this window at any time without affecting network monitoring.</property>
      </object>
    </child>
    <child>
      <object class="GtkListBox" id="listBox">
        <property name="selection-mode">none</property>
        <style>
          <class name="boxed-list"/>
        </style>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_About Bouncer</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
