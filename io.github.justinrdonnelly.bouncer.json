{
    "id": "io.github.justinrdonnelly.bouncer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "io.github.justinrdonnelly.bouncer",
    "finish-args": [
        "--socket=wayland",
        "--device=dri",
        "--socket=fallback-x11",
        "--share=ipc",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--system-talk-name=org.fedoraproject.FirewallD1"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "--libdir=/app/lib",
                "-Dbackend-gtk3=disabled",
                "-Dbackend-gtk4=enabled",
                "-Dbackend-qt5=disabled",
                "-Dbackend-qt6=disabled",
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/flatpak/libportal/releases/download/0.9.1/libportal-0.9.1.tar.xz",
                    "sha256": "de801ee349ed3c255a9af3c01b1a401fab5b3fc1c35eb2fd7dfb35d4b8194d7f"
                }
            ]
        },
        {
            "name": "bouncer",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/justinrdonnelly/bouncer.git",
                    "branch": "49"
                }
            ]
        }
    ]
}
